<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/imgviewbackgroundplaylist"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/custom_backgroud_banner"/>
    
    <ImageView
        android:id="@+id/imgviewplaylist"
        android:scaleType="fitXY"
        android:layout_alignBottom="@id/imgviewbackgroundplaylist"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:layout_width="36dp"
        android:layout_height="36dp" />

    <TextView
        android:textSize="13sp"
        android:text="Những bài hit cũ "
        android:layout_alignBottom="@id/imgviewbackgroundplaylist"
        android:layout_toRightOf="@id/imgviewplaylist"
        android:layout_marginLeft="13dp"
        android:textStyle="bold"
        android:id="@+id/txtviewtenplaylist"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>