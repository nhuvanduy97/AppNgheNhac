<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:background="@drawable/custom_backgroud_banner"
        android:scaleType="fitXY"
        android:id="@+id/imgbackgraoundbanner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <RelativeLayout
        android:id="@+id/relavitel"
        android:layout_alignBottom="@id/imgbackgraoundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
             android:layout_marginRight="10dp"
            android:id="@+id/imageviewbanner"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Ai yeu em"
            android:textSize="17sp"
            android:id="@+id/txtViewTitleSong"
            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_alignTop="@id/imageviewbanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageviewbanner"
            android:layout_below="@id/txtViewTitleSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtNoiDung"
                android:textColor="@android:color/white"
                android:text="Chao ban den voi ca khuc moi nhat cua ca si "
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>